.container
  .page-header
    %h3
      = t :change_password
  .alert.alert-danger{ role: 'alert' }
    = t :change_password_alert
  = bootstrap_form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, layout: :horizontal, label_col: 'col-sm-2', control_col: 'col-sm-4' do |f|
    = f.static_control :email
    = f.password_field :password, placeholder: 'Password', prepend: fa_icon('key fw'), autocomplete: 'off', autofocus: true
    = f.password_field :password_confirmation, placeholder: 'Password Confirmation', prepend: fa_icon('key fw'), autocomplete: 'off'
    = f.password_field :current_password, prepend: fa_icon('key fw'), autocomplete: 'off', help: t('help.user.change_password')
    = f.form_group do
      = f.primary t(:update)
      = link_button t(:cancel), url: root_path
